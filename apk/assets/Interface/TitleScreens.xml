<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- load styles -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen id="SplashScreen">
        <layer childLayout="center">
        </layer>
    </screen>

    <screen id="TitleScreen">
        <layer childLayout="vertical">
            <panel childLayout="vertical">
                <control id="version" text="Version 00.00 (XXXX)" />
                <panel childLayout="horizontal">
                    <control name="button" label="Exit">
                        <interact onClick="onExitClick()" />
                    </control>
                    <control name="button" label="Options">
                        <interact onClick="onOptionsClick()" />
                    </control>
                    <control name="button" label="Mods">
                        <interact onClick="onModsClick()" />
                    </control>
                    <control name="button" label="Workshop">
                        <interact onClick="onWorkshopClick()" />
                    </control>
                    <panel width="*" height="0px"/>
                    <control name="button" label="Solo">
                        <interact onClick="onSoloClick()" />
                    </control>
                    <control name="button" label="Join">
                        <interact onClick="onJoinClick()" />
                    </control>
                    <control name="button" label="Host">
                        <interact onClick="onHostClick()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>



</nifty>
