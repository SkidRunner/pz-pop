<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="Base_AppBackground" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		
		<item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
	
	<style name="Base_AppMain" parent="Base_AppBackground">
		<item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
	</style>
	
	<style name="SplashTheme" parent="Base_AppBackground">
    </style>
	
	<style name="AppTheme" parent="Base_AppMain">
	</style>
	
</resources>
